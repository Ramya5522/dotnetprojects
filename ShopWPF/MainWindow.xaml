<Window x:Class="ShopWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="productsGrid" Margin="10,38,10,7" ItemsSource="{Binding}" CanUserAddRows="False" ColumnWidth="*" />
        <TextBox x:Name="tbHost" Margin="10,10,507,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" KeyUp="TbHost_KeyUp"/>
        <Button x:Name="btConnect" Content="Connect" Margin="0,10,427,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="BtConnect_Click"/>
    </Grid>
</Window>
